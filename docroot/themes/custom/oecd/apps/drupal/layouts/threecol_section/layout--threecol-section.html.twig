{#
/**
 * @file
 * Theme override for a three-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 */
#}
{%
  set classes = [
    'layout',
    'layout--threecol-section',
    'layout-builder__layout'
  ]
%}

{# Header Menu Animation #}
{% set animation_type = settings.layout_header_menu_animation.animation_type %}
{% set animation_duration = settings.layout_header_menu_animation.animation_duration|default(0) %}
{% set animation_delay = settings.layout_header_menu_animation.animation_delay|default(0) %}
{% set animation_duration_2 = animation_duration + animation_delay %}
{% set animation_duration_3 = animation_duration_2 + animation_delay %}

{% if content %}
<div{{ attributes.addClass(classes).removeClass(layout_classes, layout_subheader_classes) }}>
  <div{{ attributes.addClass(layout_classes, layout_subheader_classes, 'layout-wrapper').removeClass(layout_space_bottom, layout_space_top, layout_mobile_tablet, layout_background_colours, layout_extra_classes, classes)}}>

    {% if content.first %}
      <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first') }} {% if animation_type is not empty and animation_type != 'None' %} data-aos="{{ animation_type }}" data-aos-duration="{{ animation_duration }}" {% endif %}>
        <div class="inner">
          {{ content.first }}
        </div>
      </div>
    {% endif %}

    {% if content.second %}
      <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second') }} {% if animation_type is not empty and animation_type != 'None' %} data-aos="{{ animation_type }}" data-aos-duration="{{ animation_duration_2 }}" {% endif %}>
        <div class="inner">
          {{ content.second }}
        </div>
      </div>
    {% endif %}

    {% if content.third %}
      <div {{ region_attributes.third.addClass('layout__region', 'layout__region--third') }} {% if animation_type is not empty and animation_type != 'None' %} data-aos="{{ animation_type }}" data-aos-duration="{{ animation_duration_3 }}" {% endif %}>
        <div class="inner">
          <div class="content-wrap">
            {{ content.third }}
          </div>
        </div>
      </div>
    {% endif %}

  </div>
</div>
{% endif %}

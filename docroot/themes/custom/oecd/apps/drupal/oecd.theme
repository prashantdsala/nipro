/**
 *  Implements hook_preprocess_HOOK()
*/
function oecd_preprocess_menu(&$variables, $hook) {
  if ($hook == 'menu') {
  	foreach ($variables['items'] as &$item) {
	    $item['is_front'] = FALSE;
	    $item['is_nolink'] = FALSE;
	    $item['highlight_tile'] = FALSE;
	    if ($item['url']->isRouted()) {
	      if ($item['url']->getRouteName() === '<front>') {
	        $item['is_front'] = TRUE;
	      }
	      if ($item['url']->getRouteName() === '<nolink>') {
	        $item['is_nolink'] = TRUE;
	      }
	    }
  	}
  }

	// Footer navigation variables passing to template
	$variables['footer_top_navigation_variation'] = !empty(theme_get_setting('footer_top_navigation_variation'))? theme_get_setting('footer_top_navigation_variation') : 'with-arrow';
	$variables['footer_top_arrow_animation'] = !empty(theme_get_setting('footer_top_arrow_animation'))? '1' : '';
	$variables['footer_top_navigation_size'] = !empty(theme_get_setting('footer_top_navigation_size'))? theme_get_setting('footer_top_navigation_size') : 'font-large';
	$variables['footer_top_navigation_color'] = !empty(theme_get_setting('footer_top_navigation_color'))? theme_get_setting('footer_top_navigation_color') : 'on-white-background';
	$variables['footer_middle_navigation_variation'] = !empty(theme_get_setting('footer_middle_navigation_variation'))? theme_get_setting('footer_middle_navigation_variation') : 'default';
	$variables['footer_middle_arrow_animation'] = !empty(theme_get_setting('footer_middle_arrow_animation'))? '1' : '';
  $variables['footer_middle_navigation_size'] = !empty(theme_get_setting('footer_middle_navigation_size'))? theme_get_setting('footer_middle_navigation_size') : 'font-small';
	$variables['footer_middle_navigation_color'] = !empty(theme_get_setting('footer_middle_navigation_color'))? theme_get_setting('footer_middle_navigation_color') : 'on-white-background';
	$variables['footer_utility_navigation_variation'] = !empty(theme_get_setting('footer_utility_navigation_variation'))? theme_get_setting('footer_utility_navigation_variation') : 'with-arrow';
	$variables['footer_utility_arrow_animation'] = !empty(theme_get_setting('footer_utility_arrow_animation'))? '1' : '';
	$variables['footer_utility_navigation_size'] = !empty(theme_get_setting('footer_utility_navigation_size'))? theme_get_setting('footer_utility_navigation_size') : 'font-small';
	$variables['footer_utility_navigation_color'] = !empty(theme_get_setting('footer_utility_navigation_color'))? theme_get_setting('footer_utility_navigation_color') : 'on-white-background';
	$variables['footer_bottom_navigation_variation'] = !empty(theme_get_setting('footer_bottom_navigation_variation'))? theme_get_setting('footer_bottom_navigation_variation') : 'horizontal';
	$variables['footer_bottom_arrow_animation'] = !empty(theme_get_setting('footer_bottom_arrow_animation'))? '1' : '';
	$variables['footer_bottom_navigation_size'] = !empty(theme_get_setting('footer_bottom_navigation_size'))? theme_get_setting('footer_bottom_navigation_size') : 'font-small';
	$variables['footer_bottom_navigation_color'] = !empty(theme_get_setting('footer_bottom_navigation_color'))? theme_get_setting('footer_bottom_navigation_color') : 'on-white-background';
}


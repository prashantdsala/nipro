/**
 * Implements hook_theme_suggestions_HOOK_alter()
*/
function oecd_theme_suggestions_fieldset_alter(array &$suggestions, array $variables, $hook){
	if (isset($variables['element']['#id'])) {
    $id = str_replace("-", "_", $variables['element']['#id']);
    $suggestions[] = $hook . '__' . $id;
	}
}

/**
 *  Implements hook_preprocess_HOOK()
*/
function oecd_preprocess_pattern_logo_grid(&$variables) {
  // Checking whether the variable have any value or not.
  if (isset($variables) != NULL) {
    $blockType = $variables['context']->getProperty('entity')->bundle();
    // Checking whether if block is logo-grid or not.
    if ($blockType === 'logo_grid' && is_object($variables['context']->getProperty('entity'))) {
      $entity = $variables['context']->getProperty('entity');
      if ($entity->hasField('field_on_scroll_animation')) {
        $variables['on_scroll_animation'] = $variables['context']->getProperty('entity')->get('field_on_scroll_animation')->value;
      }
      if ($entity->hasField('field_on_scroll_animation_durati')) {
        $variables['on_scroll_animation_duration'] = $variables['context']->getProperty('entity')->get('field_on_scroll_animation_durati')->value;
      }
      if ($entity->hasField('field_on_scroll_animation_delay')) {
        $variables['on_scroll_animation_delay'] = $variables['context']->getProperty('entity')->get('field_on_scroll_animation_delay')->value;
      }
    }
  }
}

/**
 *  Implements hook_preprocess_HOOK()
*/
function oecd_preprocess_pattern_section_heading(&$variables) {
	if (!empty($variables['headline_reveal_animation_color']['field_footer_content_color'][0]['#markup']) && isset($variables['on_scroll_animation_duration']['field_on_scroll_animation_durati'][0]['#context']['value'])) {
    $headlineRevealAnimation = $variables['headline_reveal_animation_color']['field_footer_content_color'][0]['#markup'];
    preg_match('/#([a-fA-F0-9]{6}|[a-fA-F0-9]{3})\b/', $headlineRevealAnimation, $matches); // checking for the color-code(start with #)
    $variables['#attached']['drupalSettings']['headlineRevealAnimation'] = $matches[0];
    $animationType = $variables['on_scroll_animation']['field_on_scroll_animation'];
    $animationDuration = $variables['on_scroll_animation_duration']['field_on_scroll_animation_durati'][0]['#context']['value'];
    $variables['#attached']['drupalSettings']['animationDuration'] = isset($animationType[0]) ? $animationDuration : 0;
	}
}


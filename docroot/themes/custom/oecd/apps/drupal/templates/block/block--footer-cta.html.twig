{% set on_scroll_animation = content['#block_content'].field_on_scroll_animation.value %}
{% set on_scroll_animation_delay = content['#block_content'].field_on_scroll_animation_delay.value %}
{% set aos_easing = "ease-in" %}

{% if title_suffix is not empty or attributes['data-quickedit-entity-id'] %}
<div{{ attributes }} data-aos={{ on_scroll_animation }} data-aos-delay={{ on_scroll_animation_delay }} data-aos-easing={{ aos_easing }}>
  {{ title_prefix }}
  {{ title_suffix }}
  {% endif %}
  {{ content }}
  {% if title_suffix is not empty or attributes['data-quickedit-entity-id'] %}
</div>
{% endif %}

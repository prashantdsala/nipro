{% set menu_title = menu_link_content.getTitle() %}
{% set link_url = menu_link_content.getUrlObject() %}
{% set on_scroll_animation_type = menu_link_content.fields['field_footer_on_scroll_animation'].value %}
{% set on_scroll_animation_delay = menu_link_content.fields['field_footer_animation_delay'].value %}
{% set icon_title = menu_link_content.getUrlObject().getOptions()['attributes']['class'][0] %}

{% include '@molecules/social-media-navigation/social-media-navigation.twig' with {
  link_url: link_url,
  menu_title: menu_title,
  icon: icon_title,
  on_scroll_animation: on_scroll_animation_type,
  on_scroll_animation_delay: on_scroll_animation_delay
} %}

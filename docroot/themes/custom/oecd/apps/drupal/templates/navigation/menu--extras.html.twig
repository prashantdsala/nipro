{#
/**
 * @file
 * Theme override to display a menu.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current
 *     menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree
 *     that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 */
#}
{% if menu_name == 'footer-bottom-menu' %}
  {% include '@molecules/navigation/navigation.twig' with {
    variant: footer_bottom_navigation_variation,
    arrow_animation: footer_bottom_arrow_animation,
    items: items,
    font_size: footer_bottom_navigation_size,
    text_color: footer_bottom_navigation_color
  } %}
{% elseif menu_name == 'footer-top-menu' %}
  {% include '@molecules/navigation/navigation.twig' with {
    variant: footer_top_navigation_variation,
    arrow_animation: footer_top_arrow_animation,
    items: items,
    font_size: footer_top_navigation_size,
    text_color: footer_top_navigation_color
  } %}
{% elseif menu_name == 'footer-utility-menu' %}
  {% include '@molecules/navigation/navigation.twig' with {
    variant: footer_utility_navigation_variation,
    arrow_animation: footer_utility_arrow_animation,
    items: items,
    font_size: footer_utility_navigation_size,
    text_color: footer_utility_navigation_color
  } %}
{% elseif menu_name|slice(0,9) == 'sub-menu-' and menu_name|slice(-1)|render|number_format matches '/^[0-9]+$/' or menu_name == 'sub-header---footer-menu' or menu_name == 'career-link-with-label' or menu_name == 'contact-link-with-label' %}
  {% import _self as menus %}

  {#
    We call a macro which calls itself to render the full tree.
    @see https://twig.symfony.com/doc/1.x/tags/macro.html
  #}
  {{ menus.menu_links(items, attributes, 0) }}

  {% macro menu_links(items, attributes, menu_level) %}
    {% import _self as menus %}
    {% if items %}
      {% if menu_level == 0 %}
        <ul{{ attributes.addClass('menu navigation__menu') }}>
      {% else %}
        <ul class="menu navigation__sub-menu">
      {% endif %}
      {% for item in items %}
        <li{{ item.attributes.addClass('navigation__item sub-menu-item mb-2 list-none') }}>
          {{ item.content }}
          {% if item.below %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
          {% endif %}
        </li>
      {% endfor %}
      </ul>
    {% endif %}
  {% endmacro %}
{% else %}
  {% include '@molecules/navigation/navigation.twig' with {
    variant: footer_middle_navigation_variation,
    arrow_animation: footer_middle_arrow_animation,
    items: items,
    font_size: footer_middle_navigation_size,
    text_color: footer_middle_navigation_color
  } %}
{% endif %}

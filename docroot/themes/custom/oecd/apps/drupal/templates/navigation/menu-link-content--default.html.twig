{#
/**
 * @file
 * Default theme implementation to present a menu link entity entity.
 *
 * Available variables:
 * - menu_link_content: Menu link entity.
 * - show_item_link: Indicator for menu item link.
 *
 * @see template_preprocess_menu_link_content()
 *
 * @ingroup themeable
 */
#}
{% set menu_title = menu_link_content.getTitle() %}
{% set link_url = menu_link_content.getUrlObject() %}
{% set menu_description = menu_link_content.fields['field_menu_description'].value %}
{% set icon = menu_link_content.fields['field_sub_menu_icon'].value %}

{% include '@molecules/menu-item/menu-item.twig' with { 
  menu_title: menu_title,
  menu_description: menu_description,
  link_url: link_url,
  icon: icon
} %}

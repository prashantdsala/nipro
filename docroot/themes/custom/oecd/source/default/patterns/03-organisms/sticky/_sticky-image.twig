{{ attach_library('oecd/sticky-component') }}

{# Default #}
{% set element = element|default('section') %}

{# Classes #}
{% set classes = [
  'sticky-component',
  'sticky-single-image-container ga-sticky-single-image',
  alignment
] %}

{% set attributes = attributes|default(create_attribute()).addClass(classes| sort | join(' ') | trim) %}

{# Template #}
{% block sticky_single_image_block %}
  <{{ element }} {{ attributes }}>
    <div class="container mx-auto sticky-wrapper">
      <div class="row-outer">
        <div class="row-inner sticky-row">
          <div class="col sticky-media-wrapper">
            <div class="show-image">
              <div class="sticky-single-image-wrapper">
                {{ image }}
              </div>
            </div>
          </div>

          <div class="col scroll-text-wrapper">
            <div class="container-inner">
              {{ items }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </{{ element }}>
{% endblock %}

{#
/**
 * @file
 * Card carousel
 *
 * See card-carousel.space.yaml for documentation.
 */
#}

{{ attach_library('oecd/card-carousel') }}

{# Settings #}
{% if carousel_layout == "small-card-carousel" %}
	{% set items = items_small %}
{% elseif carousel_layout == "medium-card-carousel" %}
	{% set items = items_medium %}
{% elseif carousel_layout == "large-card-carousel" %}
	{% set items = items_large %}
{% endif %}

{# Classes #}
{% set classes = ([
  'carousel carousel-featured-slider featured-card'
] | sort | join(' ') | trim ) %}

{# Template #}
{% block featured_card_carousel_block %}
	<div class="featured-card-wrapper featured-card-carousel ga-featured-card-carousel ga_carousel_component {{ carousel_layout }}">
		<div class="container mx-auto">
			{% include '@organisms/slider/slider.twig' with {
        slides_type: slides_type,
        slide_focus: slide_focus,
        slides_per_view: slides_per_view,
        slides_on_tablet: slides_on_tablet,
        slides_on_mobile: slides_on_mobile,
        slide_padding_right: slide_padding_right,
        slide_padding_left: slide_padding_left,
        arrows: arrows,
        arrows_color: arrows_color,
        items: items,
        counter: counter,
        autoplay: autoplay,
        extra_classes: classes,
        pagination_style: pagination_style,
        pagination_color: pagination_color,
        pagination_alignment: pagination_alignment
      } only %}
		</div>
	</div>
{% endblock %}

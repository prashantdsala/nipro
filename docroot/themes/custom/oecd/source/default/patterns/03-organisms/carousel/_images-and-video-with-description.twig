{#
/**
 * @file
 * carousel
 *
 * See carousel.space.yaml for documentation.
 */
#}

{{ attach_library('oecd/slider') }}
{{ attach_library('oecd/hero-banner-carousel') }}

{# Classes #}
{% set classes = ([
  'carousel carousel-images-and-video-with-description'
] | sort | join(' ') | trim ) %}

{# Template #}
{% block carousel_image_video_with_description_block %}
  <div class="carousel-wrapper images-and-video-with-description-wrapper ga-images-and-video-with-description-carousel ga_space_component">
    <div class="container mx-auto">
      {% include '@organisms/slider/slider.twig' with {
        slides_type: slides_type,
        slide_focus: slide_focus,
        slides_per_view: slides_per_view,
        slides_on_tablet: slides_on_tablet,
        slides_on_mobile: slides_on_mobile,
        slide_padding_right: slide_padding_right,
        slide_padding_left: slide_padding_left,
        arrows: arrows,
        arrows_color: arrows_color,
        items: items,
        counter: counter,
        autoplay: autoplay,
        extra_classes: classes,
        pagination_style: pagination_style,
        pagination_color: pagination_color,
        pagination_alignment: pagination_alignment
      } only %}
    </div>
  </div>
{% endblock %}

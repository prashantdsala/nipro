#}

{# Default #}
{% set attributes = attributes|default(create_attribute()) %}
{% set heading_id = attributes.id %}

{# Classes #}
{% set classes = [
  'block-navigation block-navigation-horizontal',
] %}

{# Template #}
{% block horizontal_navigation_block %}
  <div {{ attributes|without('role', 'aria-labelledby').addClass(classes | sort | join(' ') | trim) }} aria-labelledby="{{ heading_id }}" role="navigation">
    {{ title_suffix }}
    {% if heading|render|striptags|trim is not empty %}
      <h2 class="block-title text-text-neutralMedium textSm-bold mb-4">{{ heading }}</h2>
    {% endif %}
    {% if content|render|trim is not empty %}
      <div class="block-navigation-content">{{ content }}</div>
    {% endif %}
  </div>
{% endblock %}

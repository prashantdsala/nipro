{# Default #}
{% set id = uuid() %}

{% set border = ([
  border == true ? 'with-border',
]) | sort | join(' ') | trim %}

{# Template #}
{% block accordion_item_1_2_block %}
  <div class="accordion-item w-full overflow-hidden {{ icon_position }} {{ border }} {{ icon_collapsed }} {{ icon_expanded }}" data-children-count="{{ instance }}">
    <div class="accordion-item-inner">
      <a href="javascript:void(0)" class="ac-title block px-0 p-3 leading-normal text-xl cursor-pointer flex" tabindex='0'>
        <span class="sr-only ac-accessibilty-txt">{{ 'click to open accordion' }}</span>
        <span class="ga-acc-title">{{ label }}</span>
        </a>

      <div class="accordion-content overflow-hidden leading-normal">
        <div class="ac-content" tabindex='0'>{{ content }}</div>
      </div>
    </div>

    <div class="accordion-image">
      <div class="ac-image" tabindex='0'>{{ image }}</div>
    </div>
  </div>
{% endblock %}

{#
/**
 * @file
 * block-navigation
 *
 * See block-navigation.space.yaml for documentation.
 */
#}

{# Defaults #}
{% set attributes = attributes|default(create_attribute()) %}
{% set heading_id = attributes.id %}

{# Classes #}
{% set classes = [
  'block-navigation',
] %}
{% set aos_easing = "ease-in" %}

{# Template #}
{% block navigation_block %}
  <div {{ attributes|without('role', 'aria-labelledby').addClass(classes | sort | join(' ') | trim) }} aria-labelledby="{{ heading_id }}" role="navigation" data-aos={{ animationtype }} data-aos-delay={{ animationdelay }} data-aos-easing={{ aos_easing }}>
    {{ title_suffix }}
    {% if heading|render|striptags|trim is not empty %}
      <h2 class="block-title text-text-neutralMedium textSm-bold mb-4">{{ heading }}</h2>
    {% endif %}
    {% if content|render|trim is not empty %}
      <div class="block-navigation-content">{{ content }}</div>
    {% endif %}
  </div>
{% endblock %}

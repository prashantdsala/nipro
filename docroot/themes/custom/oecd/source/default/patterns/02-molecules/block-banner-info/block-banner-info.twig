#}

{{ attach_library('oecd/block-banner-info') }}

{# Default #}
{% set attributes = attributes|default(create_attribute()) %}
{% set heading_id = attributes.id %}

{# Classes #}
{% set classes = [
  'block-banner-info',
] %}

{# Template #}
{% block banner_info_block %}
  <div {{ attributes|without('role', 'aria-labelledby').addClass(classes | sort | join(' ') | trim) }} aria-labelledby="{{ heading_id }}" role="block banner info">
    {{ title_suffix }}
    {% if title|render|striptags|trim is not empty %}
      <h4 class="block-title text-base {{ title_font_size }} {{ title_color }}">{{ title }}</h4>
    {% endif %}
    {% if content is not empty %}
      <div class="block-content textLG-medium text-text-body">{{ content }}</div>
    {% endif %}
    {% if link|render|striptags|trim is not empty %}
      {{ link }}
    {% endif %}
  </div>
{% endblock %}
